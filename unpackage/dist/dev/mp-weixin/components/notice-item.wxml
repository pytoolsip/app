<view data-event-opts="{{[['tap',[['click',['$event']]]]]}}" class="item item-space-between" bindtap="__e"><view class="item-icon"><block wx:if="{{options.pic}}"><image class="item-icon-image" src="{{options.pic}}"></image></block><block wx:if="{{options.count&&options.count>0}}"><uni-badge class="item-icon-badge" vue-id="1" text="{{options.count}}" type="error" size="small" bind:__l="__l"></uni-badge></block></view><view class="item-body flex-col"><view class="item-space-between"><view class="item-title-text"><block wx:if="{{options.title}}"><text class="item-title">{{options.title}}</text></block><block wx:if="{{options.subTitle}}"><text class="item-sub-title">{{"["+options.subTitle+"]"}}</text></block></view><block wx:if="{{options.time}}"><text class="item-newest-time">{{options.time}}</text></block></view><view class="item-body-content"><view class="info-user flex-row"><block wx:if="{{options.user_pic}}"><image class="info-user-image" src="{{options.user_pic}}"></image></block><block wx:if="{{options.user}}"><text class="info-user-name">{{options.user}}</text></block><block wx:if="{{options.op_info}}"><text class="info-op-info">{{options.op_info}}</text></block></view><block wx:if="{{options.info}}"><text class="item-info">{{options.info}}</text></block></view></view></view>